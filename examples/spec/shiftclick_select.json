{
  "width": 200,
  "height": 200,

  "signals": [
    {
      "name": "clickedPt",
      "init": 0,
      "verbose": true,
      "streams": [{"type": "click", "expr": "datum._id"}]
    },
    {
      "name": "shift",
      "init": false,
      "verbose": true,
      "streams": [{"type": "click", "expr": "event.shiftKey"}]
    }
  ],

  "predicates": [
    {
      "name": "clearPts",
      "type": "==",
      "operands": [{"signal": "shift"}, {"value": false}]
    },
    {
      "name": "isSelected",
      "type": "in",
      "item": {"arg": "id"},
      "data": "selectedPts",
      "field": "id"
    }
  ],

  "data": [
    {
      "name": "iris",
      "url": "data/iris.json"
    },
    {
      "name": "selectedPts",
      "modify": [
        {
          "type": "clear",
          "predicate": "clearPts"
        },
        {
          "type": "toggle",
          "signal": "clickedPt",
          "field": "id"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "x", "type": "linear",
      "range": "width", "zero": false,
      "domain": {"data": "iris", "field": "sepalWidth"}
    },
    {
      "name": "y", "type": "linear",
      "range": "height",
      "nice": true, "zero": false,
      "domain": {"data": "iris", "field": "petalLength"}
    },
    {
      "name": "c",
      "type": "ordinal",
      "domain": {"data": "iris", "field": "species"},
      "range": "category10"
    }
  ],

  "axes": [
    {"type": "x", "scale": "x", "offset": 5, "ticks": 5, "title": "Sepal Width"},
    {"type": "y", "scale": "y", "offset": 5, "ticks": 5, "title": "Petal Length"}
  ],

  "marks": [
    {
      "type": "symbol",
      "from": {"data": "iris"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "sepalWidth"},
          "y": {"scale": "y", "field": "petalLength"},
          "fillOpacity": {"value": 0.5},
          "size": {"value": 100}
        },
        "update": {
          "fill": {
            "rule": [
              {
                "predicate": {
                  "name": "isSelected",
                  "id": {"field": "_id"}
                },

                "scale": "c", 
                "field": "species"
              },
              {"value": "grey"}
            ]
          }
        }
      }
    }
  ]
}
